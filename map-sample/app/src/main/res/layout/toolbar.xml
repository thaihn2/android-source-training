<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height_size"
    android:layout_margin="@dimen/default_padding_screen">

    <RelativeLayout
        android:id="@+id/rl_home_current_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:padding="@dimen/dimen_4">

        <ImageView
            android:id="@+id/iv_home_current_location"
            android:layout_width="@dimen/image_icon_size"
            android:layout_height="@dimen/image_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_my_location_white_24dp" />

        <EditText
            android:id="@+id/ed_home_current_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_toEndOf="@+id/iv_home_current_location"
            android:background="@drawable/border_home_edt"
            android:inputType="text"
            android:maxLines="@integer/edt_home_number_line_max"
            android:padding="@dimen/dimen_8"
            android:textSize="@dimen/text_size_home" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@+id/rl_home_current_location"
        android:padding="@dimen/dimen_4">

        <ImageView
            android:id="@+id/iv_home_place"
            android:layout_width="@dimen/image_icon_size"
            android:layout_height="@dimen/image_icon_size"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_place_white_24dp" />

        <EditText
            android:id="@+id/ed_home_place"
            android:imeOptions="actionSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_home_place"
            android:background="@drawable/border_home_edt"
            android:inputType="text"
            android:maxLines="@integer/edt_home_number_line_max"
            android:padding="@dimen/dimen_8"
            android:textSize="@dimen/text_size_home" />
    </RelativeLayout>
</RelativeLayout>